<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:master="clr-namespace:TipoPG.View.Master"
             x:Class="TipoPG.View.Master.Principal">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout>
                <Button Text="Página 1" Clicked="Pg1Call" BackgroundColor="Transparent" />
                <Button Text="Página 2" Clicked="Pg2Call" BackgroundColor="Transparent" />
                <Button Text="Conteudo" Clicked="ContentCall" BackgroundColor="Transparent" />
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <master:Conteudo />
    </MasterDetailPage.Detail>
</MasterDetailPage>